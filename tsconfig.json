{
  "compilerOptions": {
    "target": "ES2021",                                 
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                               
    "baseUrl": "./src",                                  
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"]
    },                                      
    "outDir": "./dist",                                   
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "resolveJsonModule": true                                
  }
}
